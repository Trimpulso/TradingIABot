# Credenciales de Binance
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# Telegram (opcional)
TELEGRAM_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Configuración de base de datos
DATABASE_URL=sqlite:///tradesv3.sqlite

# Modo dry-run (true para pruebas, false para trading real)
DRY_RUN=true

# Moneda stake
STAKE_CURRENCY=USDT

# Cantidad a invertir por trade
STAKE_AMOUNT=100

# Máximo de trades abiertos simultáneamente
MAX_OPEN_TRADES=3

# Rutas
MODELS_PATH=models/
DATA_PATH=data/
LOGS_PATH=logs/
